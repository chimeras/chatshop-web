<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="User" table="user">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="firstName" type="string" column="first_name" length="255" nullable="true"/>
    <field name="lastName" type="string" column="last_name" length="255" nullable="true"/>
    <field name="followers" type="integer" column="followers" nullable="true"/>
    <field name="age" type="integer" column="age" nullable="true"/>
    <field name="location" type="string" column="location" length="255" nullable="true"/>
    <field name="gender" type="string" column="gender" nullable="true"/>
    <field name="shoeSize" type="string" column="shoe_size" length="255" nullable="true"/>
    <field name="pantsSize" type="string" column="pants_size" length="255" nullable="true"/>
    <field name="shirtSize" type="string" column="shirt_size" length="255" nullable="true"/>
  </entity>
</doctrine-mapping>
